  gem 'pry', '~> 0.14.2'  # デバッグ用
  gem 'rubocop', '~> 1.50'  # コードスタイルチェック用
end

# テスト用のgem
group :test do
  gem 'rspec', '~> 3.12'  # テストフレームワーク
end
